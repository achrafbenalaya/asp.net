@model projethch.ViewModel.EmployeeModel
@using projethch.Models;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div style="margin: 20px">
        <div class="panel panel-primary">
            <div class="panel panel-heading">Employee Details</div>
            <div class="panel panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th> Employee Name</th>
                            <th> Employee Adress</th>
                         <th> Employee  Salary</th>
                        </tr>

                    </thead>
                    <tbody>

                        @foreach (Employee item in Model.listofEmployee)
                        {
                            <tr>
                                <td>@item.EmpName</td>
                                <td>@item.EmpAdresse</td>
                                <td>@item.EmpSalary</td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>


        </div>
    </div>
</body>
</html>
